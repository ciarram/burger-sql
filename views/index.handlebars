<img src="http://clipartsign.com/upload/2016/01/27/hamburger-burger-clipart-free-clipart.png">
<h3>Eat-Da-Burger</h3>
<div class="container">
    <div class="submit-form">
        <form action="/", method="post">
            <div class="form-group">
                <textarea class="form-control" type = "text" name="name" placeholder="Enter your burger order here!" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-info" id="submit">Submit</button>
        </form>
    </div>
    <div class="row">
        <div class="col">
        <div class="body">
            {{#each burgers}}
                <p id="burger-submission">{{this.name}}</p><button type="button" class="shift">Devour It</button>
            {{/each}}
        </div>
        </div>
        <div class="col">
        <div class="newspot">
        </div>   
        </div>
    </div> 
</div>
<script type="text/javascript">
$(document).ready(function(){
    $(".shift").on("click", function(){
        var click = true;
        console.log("clicked!");
        $.post("/").done(function(data){     
            $("#burger-submission").detach();
            console.log("I've detached");
            $("#burger-submission").appendTo(".newspot");
            $("submit").hide();
        })
    });        
});
</script>